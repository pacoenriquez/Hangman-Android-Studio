    <Button
        android:id="@+id/N"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="N"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/B"
