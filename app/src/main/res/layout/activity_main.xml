<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494747"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="363dp"
        android:layout_height="667dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:scrollbarStyle="insideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/disney"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#373636"
                android:text="Disney"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/dragon_ball"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="Dragon Ball"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/fairy_tail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="Fairy Tail"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/friends"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="Friends"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/harry_potter"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="Harry Potter"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/himym"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="How I met your Mother"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/mcu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="Marvel Cinematic Universe"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/naruto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="Naruto"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/tbbt"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="#373636"
                android:text="The Big Bang Theory"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>